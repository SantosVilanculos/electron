{
  "name": "electron",
  "version": "0.0.1",
  "description": "Electron Starter Kit",
  "keywords": [],
  "homepage": "https://github.com/santosvilanculos/electron/#readme",
  "bugs": {
    "url": "https://github.com/santosvilanculos/electron/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Santos Vilanculos",
    "email": "santosvilanculos@yahoo.com",
    "url": "https://github.com/santosvilanculos"
  },
  "main": "./dist/main.mjs",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/santosvilanculos/electron.git"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier --write ./src/",
    "start": "npm run build && electron ./",
    "dev": "cross-env NODE_ENV=development concurrently -n=\"vite,esbuild,electron\" -c=\"#BD34FE,#FFCF00,#A2ECFB\" \"vite\" \"nodemon -e 'js,ts' -x 'node ./esbuild.config.js' -w './esbuild.config.js' -w './src/preload' -w './src/main'\" \"nodemon -e 'mjs,cjs' -x 'electron ./' -w './dist/preload.cjs' -w './dist/main.mjs'\"",
    "build:vite": "vite build",
    "build:esbuild": "node ./esbuild.config.js",
    "build": "cross-env NODE_ENV=production concurrently -n=\"vite,esbuild\" -c=\"#BD34FE,#FFCF00\" \"npm run build:vite\" \"npm run build:esbuild\"",
    "preview": "npm run build && electron-builder start",
    "pack": "npm run build && electron-builder build"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "electron-store": "^10.0.1",
    "electron-traywindow-positioner": "^1.2.1",
    "pinia": "^3.0.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@gitlab/fonts": "^1.3.0",
    "@tailwindcss/vite": "^4.1.3",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.2",
    "nodemon": "^3.1.9",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.3",
    "typescript": "~5.8.0",
    "vite": "^6.2.6",
    "vite-plugin-vue-devtools": "^7.7.2"
  },
  "private": true
}
